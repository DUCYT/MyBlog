@model IEnumerable<MyBlog.Models.Project>

@{
    ViewData["Title"] = "Dự án";
}

<section class="mt-5 mb-5">
    <div class="container">
        <h2 class="text-center mb-4 fw-bold text-primary">Dự án</h2>

        <div class="row justify-content-center">
            @foreach (var project in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4 d-flex">
                    <div class="card shadow-sm flex-fill border-0 rounded-3 text-center">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title fw-semibold text-dark">@project.Title</h5>
                                <p class="card-text text-muted">@project.Description</p>
                            </div>

                            @if (!string.IsNullOrEmpty(project.Link))
                            {
                                <div class="mt-3">
                                    <a href="@project.Link" class="btn btn-outline-primary px-4" target="_blank">
                                        Link Git
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<hr class="mt-4" />
